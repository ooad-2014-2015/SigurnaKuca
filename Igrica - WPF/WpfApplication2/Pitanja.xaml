        <TextBox x:Name="txt10" HorizontalAlignment="Left" Height="24" Margin="208,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
        <TextBox x:Name="txt9" HorizontalAlignment="Left" Height="24" Margin="186,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
