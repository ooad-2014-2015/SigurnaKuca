        <TextBox x:Name="txt4" HorizontalAlignment="Left" Height="24" Margin="76,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
        <TextBox x:Name="txt3" HorizontalAlignment="Left" Height="24" Margin="54,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
        <TextBox x:Name="txt2" HorizontalAlignment="Left" Height="24" Margin="32,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" RenderTransformOrigin="2.118,0.458" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
        <Grid x:Name="gridzaslova1" HorizontalAlignment="Left" Height="48" Margin="0,65,0,0" VerticalAlignment="Top" Width="458"/>
        <Button x:Name="buttonPotvrdi" Content="Potvrdi" HorizontalAlignment="Left" Height="25" Margin="10,113,0,0" VerticalAlignment="Top" Width="105" Click="buttonPotvrdi_Click" BorderBrush="#FFFBFBFB" Foreground="#FFF5F1F1" >
