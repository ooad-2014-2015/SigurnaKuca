        <TextBox x:Name="txt16"  HorizontalAlignment="Left" Height="24" Margin="340,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
        <TextBox x:Name="txt15" HorizontalAlignment="Left" Height="24" Margin="318,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="17" MaxLength="1" MaxLines="1" Background="#FFC3C3C3" BorderBrush="White"/>
