        </Button>
        <Label x:Name="labelPitanje" Content="" HorizontalAlignment="Left" Margin="435,0,0,0" VerticalAlignment="Top" FontSize="13" FontFamily="Microsoft Sans Serif" />
        <Label x:Name="labelPotvrda" FontWeight="Bold" Content="" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Width="298" FontSize="12" FontFamily="Microsoft Sans Serif" />
        <Label x:Name="labelJokeri" Content="Džokeri:" HorizontalAlignment="Left" Margin="313,131,0,0" VerticalAlignment="Top" FontSize="12" FontFamily="Microsoft Sans Serif" Foreground="#FFF9F9F9" BorderBrush="White"/>
        <TextBlock x:Name="labelaStoperica" Text="" HorizontalAlignment="Left" Margin="428,30,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="13" FontFamily="Microsoft Sans Serif"/>
    </Grid>
</Window>
