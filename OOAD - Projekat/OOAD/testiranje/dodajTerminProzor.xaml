<Window x:Class="SafeHouse.dodajTerminProzor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="330" Width="282" Title="Dodavanje termina">
    <Grid Background="#FF363434" Margin="0,0,-8,0">
        <ListBox x:Name="dodajTerminListBox" HorizontalAlignment="Left" Height="238" Margin="19,26,0,0" VerticalAlignment="Top" Width="241" SelectionChanged="dodajTerminListBox_SelectionChanged">
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF363434" Offset="0"/>
                    <GradientStop Color="#FF4D4C4C" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.Background>
        </ListBox>
        <Button Name="dodajButton" HorizontalAlignment="Left" Height="23" Margin="169,269,0,0" VerticalAlignment="Top" Width="91" Click="dodajButton_Click" BorderBrush="#FFFDFDFD" Foreground="White" Content="Dodaj termin">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Label Content="Odaberite jedan od ponuđenih termina" HorizontalAlignment="Left" Height="25" Margin="19,1,0,0" VerticalAlignment="Top" Width="225" Foreground="#FFFB6A6A"/>
    </Grid>
</Window>
